import java.sql.Connection;
import java.sql.PreparedStatement;
import java.sql.ResultSet;
import java.util.ArrayList;
import javax.swing.JOptionPane;

public class IdentitasKelas_crud {
    private Connection con;    
    private PreparedStatement s;
    private ResultSet rs;

public void update(String namaRuang,String lokasiRuang, String prodi){
try{
   con = database.getConnection();
   s = con.prepareStatement("UPDATE `IdentitasKelas` SET namaRuang =?, lokasiRuang=? WHERE prodi=?");
   s.setString(1, namaRuang);
   s.setString(2, lokasiRuang);
   s.setString(3, prodi);   
   s.executeUpdate();
    
}catch(Exception e){
    e.printStackTrace();
    }
}
public ArrayList<IdentitasKelas> read(){
    ArrayList<IdentitasKelas> Ids = new ArrayList<IdentitasKelas>();
    try {
    con = database.getConnection();
    s = con.prepareStatement("SELECT * from `IdentitasKelas`");
    rs = s.executeQuery();
    while(rs.next()){
        IdentitasKelas identitaskelas = new IdentitasKelas();
        identitaskelas.setNamaRuang(rs.getString("Nama Ruang"));
        identitaskelas.setLokasiRuang(rs.getString("Lokasi Ruang"));
        identitaskelas.setProdi(rs.getString("Prodi"));
        Ids.add(identitaskelas);
      }
    }catch (Exception e){
        e.printStackTrace();
    }
     
    
    
    return Ids;
    }
}
